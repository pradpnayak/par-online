function direct_debit_admin_create_rbc_and_update_status( $mode = 'live' ) {
  require_once 'api/api.php';
  require_once 'CRM/Core/BAO/CustomGroup.php';
  require_once 'CRM/Utils/File.php'; 
  require_once 'CRM/Core/DAO.php';
